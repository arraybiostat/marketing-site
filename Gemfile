  gem 'bootstrap-sass', '~> 2.0.2'  # https://github.com/thomas-mcdonald/bootstrap-sass
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'rails-dev-tweaks', '~> 0.6.1'
end
